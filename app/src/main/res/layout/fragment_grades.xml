<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher.Grades">

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/back_upper">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back_lower">
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPLOAD STUDENT GRADES"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="40dp"/>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="335dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/back_lay"
        android:padding="15dp"
        android:layout_centerHorizontal="true">
        <EditText
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="Student Id"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:id="@+id/stu_id"
            android:drawableEnd="@drawable/id" />
        <EditText
            android:textColor="@color/white"
            android:layout_below="@+id/stu_id"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:textSize="15sp"
            android:hint="MARKS IN MAD {out of 100)"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:drawableEnd="@drawable/baseline_numbers_24"
            android:id="@+id/stu_name"/>
        <EditText
            android:textColor="@color/white"
            android:layout_below="@+id/stu_name"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:inputType="number"
            android:hint="MARKS IN WEB-ENGN {out of 100)"
            android:drawableEnd="@drawable/baseline_numbers_24"
            android:textColorHint="@color/white"
            android:id="@+id/stu_Father"/>
        <EditText
            android:textColor="@color/white"
            android:layout_below="@+id/stu_Father"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="MARKS IN AI {out of 100)"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:id="@+id/stu_city"
            android:drawableEnd="@drawable/baseline_numbers_24"/>
        <EditText
            android:textColor="@color/white"
            android:layout_below="@+id/stu_city"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="MARKS IN CN {out of 100)"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:id="@+id/stu_gender"
            android:drawableEnd="@drawable/baseline_numbers_24"/>



    </RelativeLayout>


    <Button
        android:id="@+id/btn"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="UPLOAD"
        android:drawableEnd="@drawable/plus"
        android:textStyle="bold"
        android:textSize="25sp"
        android:backgroundTint="#253873"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true">
    </Button>


</RelativeLayout>